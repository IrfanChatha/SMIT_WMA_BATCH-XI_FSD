datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Appointments {
  id              String @id @default(auto())
  appointmentID   String @id
  doctorID        String @id
  patientID       String @id
  dateTime        String
  notes           String
}

model Doctors {
  id              String @id @default(auto())
  doctorID        String @id
  name            String
  specialization  String
  contactInfo     String
  schedule        String
  slotId_1        numberInt
  startTime       String
  endTime         String
  available       String
}

model Patients {
  id                    String @id @default(auto())
  patientID             String @id
  patientname           String
  patientContactDetails String
  patientMedicalHistory String
}